    <record id="view_crm_lead_form_inherited" model="ir.ui.view">
        <field name="name">crm.lead.form.inherited.review_details</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" /> <!-- Reference the correct view -->
        <field name="arch" type="xml">
            <!-- Locate the notebook element that contains the tabs -->
            <xpath expr="//notebook" position="inside">
                <!-- Add a new tab -->
                <page string="Review Details">
                    <!-- Place the custom field inside the new tab -->
                    <group>
                        <field name="rec_timestamp" />
                        <field name="rec_transcription" widget="expandable_text" />
                        <field name="rec_audio_file" widget="audio" />
                        <field name="rec_device" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>


