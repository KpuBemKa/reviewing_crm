<?xml version="1.0"?>
<odoo>
    <record id="rvg_access_tasks_action"
            model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">rvg.tasks</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'search_default_date_time_range': True}</field> -->
    </record>

    <record id="rvg_reviews_view_tree"
            model="ir.ui.view">
        <field name="model">rvg.tasks</field>
        <field name="arch"
               type="xml">
            <tree string="Reviews"
                  default_order="rvg_timestamp desc"
                  class="o-r-list">
                <field name="rvg_title" />
                <field name="rvg_expected_closing" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="rvg_reviews_view_form"
            model="ir.ui.view">
        <field name="model">rvg.tasks</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="rvg_title"
                                   placeholder="e.g. Overcooked salmon" />
                        </h1>
                    </div>
                    <group>
                        <field name="rvg_priority"
                               widget="priority" />
                        <field name="rvg_responsible" />
                    </group>
                    <group>
                        <field name="rvg_tag_ids"
                               widget="many2many_tags"
                               options="{'color_field': 'color', 'no_create_edit': True}" />
                    </group>

                    <notebook>
                        <page string="Review Details"
                              name="review_details">
                            <group>
                                <field name="rvg_review"
                                       widget="selection"
                                       groups="base.group_system" />
                                <field name="rvg_review_timestamp" />
                                <field name="rvg_review_audio_file"
                                       widget="rvg_audio"
                                       filename="rvg_review_filename" />
                                <field name="rvg_review_filename"
                                       invisible="1" />
                                <field name="rvg_review_issues" />
                            </group>
                            <group>
                                <field name="rvg_review_transcription" />
                                <field name="rvg_review_summary" />
                            </group>
                        </page>

                        <page string="Resolution"
                              name="review_resolution">
                            <group>
                                <field name="rvg_resoltution_photos"
                                       widget="rvg_gallery" />
                                <field name="rvg_photo"
                                       widget="image" />
                            </group>

                            <group>
                                <field name="rvg_resolution_details" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>