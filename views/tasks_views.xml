<?xml version="1.0"?>
<odoo>
    <record id="rvg_tasks_view_kanban"
            model="ir.ui.view">
        <field name="model">rvg.tasks</field>
        <field name="arch"
               type="xml">
            <kanban default_group_by="rvg_stage"
                    default_order="rvg_priority desc"
                    class="o_kanban_small_column o_opportunity_kanban"
                    archivable="false"
                    quick_create="0"
                    group_create="true"
                    js_class="crm_kanban">
                <field name="rvg_stage"
                       options='{"group_by_tooltip": {"requirements": "Description"}}' />
                <field name="rvg_color" />
                <field name="rvg_priority" />
                <field name="activity_date_deadline" />
                <field name="activity_summary" />
                <field name="activity_state" />
                <field name="activity_ids" />
                <progressbar field="activity_state"
                             colors='{"planned": "success", "today": "warning", "overdue": "danger"}'
                             help="This bar allows to filter the opportunities based on scheduled activities." />
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable">
                            <a role="menuitem"
                               type="edit"
                               class="dropdown-item">Edit</a>
                        </t>
                        <t t-if="widget.deletable">
                            <a role="menuitem"
                               type="delete"
                               class="dropdown-item">Delete</a>
                        </t>
                        <ul class="oe_kanban_colorpicker"
                            data-field="rvg_color" />
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.rvg_color.raw_value) : ''}  oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="rvg_title" />
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle"> </div>
                                <div>
                                    <field name="rvg_tag_ids"
                                           widget="many2many_tags"
                                           options="{'color_field': 'color'}" />
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="rvg_priority"
                                               widget="priority"
                                               groups="base.group_user" />
                                        <field name="activity_ids"
                                               widget="kanban_activity" />
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="rvg_responsible"
                                               widget="many2one_avatar_user"
                                               domain="[('share', '=', False)]" />
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="rvg_tasks_view_tree"
            model="ir.ui.view">
        <field name="model">rvg.tasks</field>
        <field name="arch"
               type="xml">
            <tree string="Reviews"
                  default_order="rvg_expected_closing desc"
                  class="o-r-list">
                <field name="rvg_title" />
                <field name="rvg_expected_closing" />
                <field name="rvg_stage" />
            </tree>
        </field>
    </record>

    <record id="rvg_tasks_view_form"
            model="ir.ui.view">
        <field name="model">rvg.tasks</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                    <field name="rvg_stage"
                           widget="statusbar"
                           options="{'clickable': '1', 'fold_field': 'fold'}" />
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="rvg_title"
                                   placeholder="e.g. Overcooked salmon" />
                        </h1>
                    </div>

                    <group>
                        <div style="{display: inline-block}">
                            <h6>Revealed problems:</h6>
                            <field name="rvg_review_issues"
                                   nolabel="True" />
                        </div>
                        <group>
                            <field name="rvg_expected_closing" />
                            <field name="rvg_responsible"
                                   widget="many2one_avatar_user" />
                            <field name="rvg_priority"
                                   widget="priority" />
                            <field name="rvg_tag_ids"
                                   widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create': True}" />
                        </group>
                        <separator />
                    </group>

                    <notebook>
                        <page string="Review Details"
                              name="review_details">
                            <group>
                                <group>
                                    <field name="rvg_review_timestamp" />
                                </group>
                                <group>
                                    <field name="rvg_review_audio_file"
                                           widget="rvg_audio" />
                                </group>
                            </group>
                            <separator />
                            <group>
                                <div>
                                    <h6>The review mentions the following problems:</h6>
                                    <!-- <label for="rvg_review_summary"
                                           string="The review mentions the following problems:" /> -->
                                    <field name="rvg_review_summary"
                                           nolabel="True" />
                                </div>
                                <div>
                                    <h6>Original text:</h6>
                                    <field name="rvg_review_transcription"
                                           nolabel="True" />
                                </div>
                                <group> </group>
                            </group>
                        </page>

                        <page string="Resolution"
                              name="review_resolution">
                            <group class="rvg-photos-field">
                                <field name="rvg_resoltution_photos"
                                       widget="rvg_image"
                                       options="{'acceptedFileExtensions': 'image/*'}" />
                            </group>

                            <group>
                                <field name="rvg_resolution_details" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids"
                           options="{'post_refresh': 'recipients'}" />
                </div>
            </form>
        </field>
    </record>

    <record id="rvg_access_tasks_action"
            model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">rvg.tasks</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="rvg_access_tasks_action_view_kanban"
            model="ir.actions.act_window.view">
        <field name="sequence"
               eval="0" />
        <field name="view_mode">kanban</field>
        <field name="view_id"
               ref="rvg_tasks_view_kanban" />
        <field name="act_window_id"
               ref="rvg_access_tasks_action" />
    </record>

    <record id="rvg_access_tasks_action_view_tree"
            model="ir.actions.act_window.view">
        <field name="sequence"
               eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id"
               ref="rvg_tasks_view_tree" />
        <field name="act_window_id"
               ref="rvg_access_tasks_action" />
    </record>
</odoo>