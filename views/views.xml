    <record id="view_crm_lead_form_inherited" model="ir.ui.view">
        <field name="name">crm.lead.form.inherited.review_details</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" /> <!-- Reference the correct view -->
        <field name="arch" type="xml">
            <!-- Locate the notebook element that contains the tabs -->
            <xpath expr="//notebook" position="inside">
                <!-- Add a new tab -->
                <page string="Review Details">
                    <!-- Place the custom field inside the new tab -->
                    <group>
                        <group>
                            <!-- <div class="mt48"> -->
                            <field name="rec_timestamp" />
                            <field name="rec_device" />

                            <field name="rec_filename" invisible="1" />
                            <field name="id" invisible="True" />
                            <!-- </div> -->
                        </group>
                        <group>
                            <field name="rec_audio_file" filename="rec_filename" widget="revc_audio" />
                        </group>
                        <group>
                            <!-- <field name="rec_summary" widget="expandable_text" /> -->
                            <field name="rec_summary" widget="text" />
                        </group>
                        <group>
                            <!-- <field name="rec_transcription" widget="expandable_text" /> -->
                            <field name="rec_transcription" widget="text" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


</odoo>