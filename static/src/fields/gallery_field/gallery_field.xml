<templates>
    <t t-name="rvg.GalleryWidget">

        <t t-if="imagesRecords.count > 0">
            <div class="gallery-widget-container">
                <t t-foreach="imagesRecords.records"
                   t-as="image"
                   t-key="image.id">
                    <img t-att-src="this.getImageUrlPath(image)"
                         class="gallery-image"
                         t-att-alt="image.name || 'Image'"
                         loading="lazy"
                         t-on-click="() => this.openImage(image)" />
                </t>
            </div>
        </t>

        <t t-else="">
            <div>
                <p>No images available.</p>
            </div>
        </t>
    </t>
</templates>