<odoo>
    <record id="rvg_access_tags_action"
            model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">rvg.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="rvg_tags_view_tree"
            model="ir.ui.view">
        <field name="model">rvg.tags</field>
        <field name="arch"
               type="xml">
            <tree string="Tags">
                <field name="id" />
                <field name="color"
                       widget="color_picker" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="rvg_tags_view_form"
            model="ir.ui.view">
        <field name="model">rvg.tags</field>
        <field name="arch"
               type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="name"
                               placeholder="e.g. Kitchen" />
                    </h1>
                </div>
                <sheet>
                    <group>
                        <field name="color"
                               widget="color_picker" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>